    <div class="content_sub_post coment_border">
        <div class="picture_follower_comment">
            <%= image_tag(subactivity.author.user.logo, :size => "30x30", :alt => subactivity.author.name ) %>
        </div>
        <div class="content_comment">
            <div class="name_follower"><%=subactivity.author.name %><span class="subactivity_content_comments">
                <%= render subactivity.activity_objects %></span>
