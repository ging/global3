<% if activity.parent_id.present? %>
  <%= render :partial => "activities/subactivity",:object => activity %>
<% else %>
   
<div class="post content_size" >
    <div class="picture_follower">
        <%= image_tag(activity.author.user.logo) %>
    </div>
    <div class="content_post">
        <div id="activity<%= activity.id %>" class="name_follower content_size">
            <%=activity.author.name %>
        </div>
        <%= render activity.activity_objects %>
        <div class="post_options_follower ">
            <span class="post_time_ago"><%=time_ago_in_words(activity.created_at)%> ago</span>
            <img src="images/point_gray.png" alt="gray_button" /><a href="#">Comments</a>
            <img src="images/point_blue.png" alt="blue_button" /><%= link_to "I like", activity_like_path(activity), :method => :post, :remote => true %>
            <img src="images/point_blue.png" alt="blue_button" /><%= link_to "Delete", activity, :confirm => 'Are you sure?', :method => :delete %>
        </div>
        <div class="post_comments ">
            <div class="space_comments">
            </div>

            <%= render activity.comments %>
            
            <div class="content_sub_post coment_border">
                <div class="coment_field">
                  <%= form_for Comment.new(:text => "Write a comment",
                                           :_activity_tie_id => current_tie.id,
                                           :_activity_parent_id => activity.id),
                                    :remote => true do |f| %>

                    <%= f.hidden_field :_activity_tie_id %>
                    <%= f.hidden_field :_activity_parent_id %>
                    <%= f.text_field :text, :class => "input_new_comments", :size => 65 %>
                  <% end %>
                  
                        
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
