<% content_for :javascript do %>


  <%if params[:show_day] %>
     $('#date<%=params[:show_day]%>').addClass("selected");
    $('#agenda_page<%=params[:show_day]%>').show();
  <%else%>
    $('#date1').addClass("selected");
    $('#agenda_page1').show();
  <%end%>



<%end%>

<%for day in @days%>
  <div id="agenda_page<%=day%>" class="agenda_tab" style="display:none">
    <%sessions = @event.agenda.contents_for_day(day)%>
    <%for session in sessions%>
      <%=render :partial =>"sessions/show", :locals =>{:session => session, :expanded => true, :day=>day }%>
    <%end%>
  </div>
<%end%>