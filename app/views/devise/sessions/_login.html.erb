<div id="login_div" class="blue_title">
	<div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%><%= t('vcc') %></span></div>
  	<div class="form">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name, :protocol => current_site.protocol)) do -%>
			<!--<div id="login_label"><h3>Enter your Email and Password</h3></div>-->
			<div id="openid-logo" <%='style="display:none;"' unless request.xhr? %>>
			  <h3><%= t('openid.have') %></h3>
			  <%=link_to image_tag("open-id-logos/openid4.png",:size=>"h64"),"javascript:openid()"%> <span class="person_title"> <%= t('or_use_email') %></span>
			</div>
			<div class="openid_form" <%='style="display:none;"' if request.xhr? %> >
                          <% form_for(resource, :as => resource_name, :url => session_path(resource_name, :protocol => current_site.protocol)) do -%>
 	  			<div id="openid_label"><h3><%= t('openid.enter') %> <%= text_field_tag 'openid_identifier', params[:openid_identifier] %>
					<button type="submit" class="basic_button blue_button"><%=t("login")%></button>
					</h3></div>
    		  
  		    </div>	  		
			<div>
		  		<label for="login"><%= t('email') %></label><br/>
		  		<%= text_field_tag 'login', params[:login] %>
	  		</div>
	  		<div>
	  			<label for="password"><%= t('password.one') %></label><br/>
	    		<%= password_field_tag 'password' %>
	  		</div>
	  		<div>
	  			<label for="remember_me"><%= t('remember_me') %>:</label><%= check_box_tag ('remember_me') %>
	  		</div>
    		<div class="button">
    			<button type="submit" class="basic_button blue_button"><%=t("login")%></button>
				<% end -%>
				<span><%= link_to t('register_now'), signup_path, :class => "login_lightbox_link" %> |  <%= link_to t('user.lost_password'), lost_password_path, :class => "login_lightbox_link" %></span>
			</div>

    	<% end -%>

	</div>
</div>
