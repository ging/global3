<div id="login_div"  class="blue_title">
  <div id="lightbox-logo"><span><%= image_tag("global.png",:class=>"icon")%><%=t('vcc')%></span></div>
  <div class="form">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <span class="info"><%=t('user.password_info')%></span>
      <%= f.text_field :email, :size => 25 %>
	  <button id="missing_pswd" type="submit" class="basic_button blue_button"><%=t('user.request_password')%></button>
    <!-- <div><input onclick=document.location="/" type="button" value="Back" /></div>-->
  <% end %>
  <div class="options margin-up">
    <ul>
      <li><%=t('can_also')%> </li>
      <li><%= link_to t('login'), login_path, :class => "login_lightbox_link" %></li>
      <li>|</li>
      <li><%= link_to t('register_now'), signup_path, :class => "login_lightbox_link" %></li>
    </ul>
  </div>
  </div>

</div>
