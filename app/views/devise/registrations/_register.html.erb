<div id="login_div"  class="blue_title">
  <% if devise_error_messages!.blank? %>
	<div id="lightbox-logo"><span><%= image_tag("bola_global_peque.png",:class=>"icon")%><%=t('vcc')%></span></div>
  <% end %>
	<%= devise_error_messages! %>
	<div class="form">
          <%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| -%>
		
		<%= render :partial => 'form', :locals => { :f => f } %>
		
		<div id="captcha"><%= show_simple_captcha(:object=> :user) %> </div>
		
		<div class="button">
			<button type="submit" class="basic_button blue_button"><%=t("done")%></button>
			<span><%= link_to t('login'), login_path, :class => "login_lightbox_link" %> | <%= link_to t('user.lost_password'), lost_password_path, :class => "login_lightbox_link" %></span>
		</div>
	<% end -%>
	</div>

</div>
