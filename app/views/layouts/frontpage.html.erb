<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">

<html lang="en">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title><%= yield :title %></title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    
	<%= stylesheet_link_tag "frontpage", :media => "screen, projection" %>
	<%= stylesheet_link_tag "lightbox", :media => "screen, projection" %>
	<%= stylesheet_link_tag "jquery.fancybox", :media => "screen, projection" %>
		
   
    <%= javascript_include_tag 'jquery', 'application', 'jquery.livequery', 'jquery.fancybox', 'jquery.easing' %>
    <script type="text/javascript" charset="utf-8">
    	
			$(document).ready(function() {
	      <%= render :partial => 'layouts/ready.js.erb' %>
				<%= yield :javascript%>
				
	      show_open_id_form = function(){
	        $(".div_login").hide();
	        $(".div_login_openid").show();
	      };
	    
	      show_user_password_form = function(){
	        $(".div_login_openid").hide();
	        $(".div_login").show();
	      };
	    });

    </script>
		
	<%= yield :headers %>
  </head>

  <body>
  	<div id="site">
  		<%= render :partial => "layouts/frontpage_global" %>
		
		<div id="home">
			<div id="header">
				<div class="banner_busqueda">
					<div id="espacio_busqueda">
		        <% flash.each do |name, msg| %>
		          <div class="<%= name %>"><%= msg %></div>
		        <% end %>
	        </div> 
					<%= render :partial => "layouts/frontpage_header" %>
				</div>
			</div>
			
			<div id="content">

				<%= yield %>
			</div>
	    </div>

		<div id="sponsor-wrapper">
			<%= render :partial => "layouts/sponsor" %>
		</div>
		
		<div id="footer-wrapper">
			<%= render :partial => "layouts/frontpage_footer" %>
		</div>
	</div>
	 
	 <%if current_site.domain == "globalplaza.org"%>
			<script type="text/javascript">
				var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
				document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
			</script>
			<script type="text/javascript">
				try {
					var pageTracker = _gat._getTracker("UA-12096965-1");
					pageTracker._trackPageview();
				} catch(err) {}
			</script>
		<%end%>
  
	</body>
</html>
