<div id="wrapper_activities_header">
    <div id="activities_title" class="content_size">
        <img src="images/buttons/btn_activities.png" />Activities
    </div>
    <div id="activities_header" class="content_size">
      <%= form_for Post.new(:text => "What do you dou?",
                            :activity_wall_id => current_user.actor.id,
                            :activity_role_id => Role["Public"].id) do |f| %>
        <%= f.hidden_field :activity_wall_id %>
        <%= f.hidden_field :activity_role_id %>
        <%= f.text_field :text, :id => "input_activities", :size => 85 %>
        <div id="activities_share">
          <img src="images/buttons/btn_security.png" />
          <%= image_submit_tag "buttons/btn_share.png" %>
        </div>
      <% end -%>
    </div>
</div>


<% if current_user.wall.any? %>
<% current_user.wall.all.each do |activity| %>
<div class="post content_size">
    <div class="picture_follower">
		<%= image_tag(activity.author.user.logo) %>
    </div>
    <div class="content_post">
        <div class="name_follower content_size">
           <%=activity.author.name %>
        </div>
        <div class="content_post_follower content_size">
            <%=activity.activity_objects.first.post.text%>
        </div>
        <div class="post_options_follower ">
            <span class="post_time_ago">33 minutes ago</span>
            <img src="images/point_gray.png" alt="gray_button" /><a href="#">Comments</a>
            <img src="images/point_blue.png" alt="blue_button" /><a href="#">I like</a>
        </div>
        <div class="post_comments ">
            <div class="space_comments">
            </div>
            <div class="content_sub_post coment_border">
                <div class="picture_follower">
                    <img src="images/followers/3.png" />
                </div>
                <div class="content_post">
                    <div class="name_follower">
                        Ariana García
                    </div>
                    <div class="content_post_follower">
                        Este tipo de eventos son increibles para los avances de las tecnologías
                    </div>
                    <div class="post_options_follower ">
                        <span class="post_time_ago">33 minutes ago</span>
                    </div>
                </div>
            </div>
            <div class="space_comments">
            </div>
            <div class="content_sub_post coment_border">
                <div class="coment_field">
                    <input name="new_space" class="input_new_comments" value="Write a comment" size="65"/>
                </div>
            </div>
        </div>		
    </div>
	
</div>

<% end %>
<% end %>



